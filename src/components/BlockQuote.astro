---
import Image from "@/components/Image.astro";

interface Props {
  name: string;
  title: string;
  image: string;
  text: string;
}

const { name, title, image, text } = Astro.props;
---

<figure class="my-16 border-l-2 border-viking-500 pl-8">
  <blockquote
    class="text-xl font-semibold leading-8 tracking-tight text-gray-900"
  >
    “{text}”
  </blockquote>
  <figcaption class="mt-8 flex items-center gap-x-4">
    <Image
      src={image}
      alt={`${name} - ${title}`}
      class="mt-1 h-16 w-16 flex-none rounded-full bg-gray-50"
      sizes="10vw"
    />
    <div class="text-sm leading-6">
      <div class="font-semibold text-gray-900">{name}</div>
      <div class="text-gray-600">{title}</div>
    </div>
  </figcaption>
</figure>
