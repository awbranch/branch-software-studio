---
import H1 from "@/components/H1.astro";
import Icon from "@/components/Icon.astro";
import Label from "@/components/Label.astro";
import Input from "@/components/Input.astro";
import TextArea from "@/components/TextArea.astro";
import Button from "@/components/Button.astro";
---

<div class="flex flex-col gap-16 lg:flex-row lg:gap-20">
  <div class="flex-1">
    <H1 classes="mb-6">Contact</H1>
    <p class="">
      Drop me a message describing how we could work together â€” looking forward
      to hearing from you.
    </p>
    <ul class="mt-4 space-y-1">
      <li class="flex flex-row">
        <a
          class="font-medium hover:text-white"
          href="mailto:hello@branchstudio.io">hello@branchstudio.io</a
        >
      </li>
      <li class="text-sm hover:text-white">
        <a href="tel:5856155942">(585) 615-5942</a>
      </li>
    </ul>
  </div>
  <div class="flex-1">
    <form>
      <div class="mb-8">
        <Label classes="mb-2" forId="first_name">Name</Label>
        <Input type="text" id="name" required />
      </div>
      <div class="mb-8">
        <Label classes="mb-2" forId="email">Email</Label>
        <Input type="email" id="email" required />
      </div>
      <div class="mb-12">
        <Label classes="mb-2" forId="message">Message</Label>
        <TextArea id="message" rows="4" />
      </div>
      <div class="text-right">
        <Button type="submit">Submit</Button>
      </div>
    </form>
  </div>
</div>
