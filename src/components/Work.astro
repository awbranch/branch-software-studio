---
import { getCollection, getEntry } from "astro:content";
import H1 from "@/components/H1.astro";
import Link from "@/components/Link.astro";

const projects = await getCollection("projects");
---

<H1>Work</H1>
<p class="mt-6 max-w-2xl">
  Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod
  tempor. Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do
  eiusmod tempor
</p>

<div
  class="mx-auto mt-12 grid max-w-2xl grid-cols-1 gap-x-16 gap-y-24 lg:mx-0 lg:max-w-none lg:grid-cols-2"
>
  {
    projects.map((p) => (
      <article class="flex flex-col items-start justify-between">
        <div class="relative w-full">
          <img
            src={p.data.cover}
            alt=""
            class="aspect-[16/9] w-full rounded bg-gray-100 object-cover object-top sm:aspect-[2/1] lg:aspect-[3/2]"
          />
          <div class="absolute inset-0 rounded ring-1 ring-inset ring-black/10" />
        </div>
        <div class="max-w-xl">
          <div class="mt-8 flex items-center gap-x-4 text-xs">
            <time datetime="2020-03-16" class="text-gray-500">
              {p.data.time}
            </time>
            {p.data.categories.map((category) => (
              <span class="relative z-10 rounded-full bg-white px-3 py-1.5 font-medium text-wood-600">
                {category}
              </span>
            ))}
          </div>
          <div class="group">
            <h3 class="mt-3 text-lg font-semibold leading-6 group-hover:text-gray-400">
              <a href="#">{p.data.title}</a>
            </h3>
            <p class="mt-5 line-clamp-4 text-sm leading-6 text-gray-600">
              {p.data.description}
            </p>
            <p>
              <a class="mt-4 block text-sm font-normal" href="#">
                Find Out More
              </a>
            </p>
          </div>
        </div>
      </article>
    ))
  }

</div>
