---
const menus = [
  {
    title: "About",
    url: "#about",
  },
  {
    title: "Work",
    url: "#work",
  },
  {
    title: "Contact",
    url: "#contact",
  },
];
---

<nav class="container mx-auto">
  <div
    class="mx-auto flex flex-wrap items-center justify-between border-b border-wood-100 px-4 py-5"
  >
    <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
      <img src="/logo.svg" class="h-20" alt="Branch Software Studio Logo" />
    </a>
    <button
      data-collapse-toggle="navbar-default"
      type="button"
      class="inline-flex h-10 w-10 items-center justify-center rounded-lg p-2 text-sm text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600 md:hidden"
      aria-controls="navbar-default"
      aria-expanded="false"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="h-5 w-5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          class="stroke-gray-900"
          stroke="black"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul
        class="mt-4 flex flex-col rounded-lg border border-gray-500 bg-gray-50 p-4 font-medium dark:border-gray-700 dark:bg-gray-800 md:mt-0 md:flex-row md:space-x-8 md:border-0 md:bg-transparent md:p-0 rtl:space-x-reverse"
      >
        {
          menus.map((menu) => (
            <li>
              <a
                href={menu.url}
                class="block rounded px-3 py-2 font-semibold uppercase text-gray-900 hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:border-0 md:p-0 md:hover:bg-transparent md:hover:text-viking-600 md:hover:underline  md:hover:underline-offset-4 md:dark:hover:bg-transparent md:dark:hover:hover:text-viking-600"
              >
                {menu.title}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>
