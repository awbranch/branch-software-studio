---
export type GalleryItem = {
  title?: string;
  alt: string;
  src: string;
};

interface Props {
  items: GalleryItem[];
}

const { items } = Astro.props;
---

<div class="my-12 grid grid-cols-1 gap-6 md:grid-cols-2">
  {
    items.map((item) => (
      <div>
        <img
          class="h-auto max-w-full rounded-lg"
          src={item.src}
          alt={item.alt}
        />
      </div>
    ))
  }
</div>
