---
import Layout from "@/layouts/Layout.astro";
import Section from "@/components/Section.astro";
import Hero from "@/components/Hero.astro";
import Services from "@/components/Services.astro";
import About from "@/components/About.astro";
import Work from "@/components/Work.astro";
import Contact from "@/components/Contact.astro";
---

<Layout>
  <Section id="hero" background="none">
    <Hero />
  </Section>
  <Section id="services" background="black">
    <Services />
  </Section>
  <Section id="about" background="viking" wallpaper="sun">
    <About />
  </Section>
  <Section id="work" background="none">
    <Work />
  </Section>
  <Section id="contact" background="viking" wallpaper="sunrise">
    <Contact />
  </Section>
</Layout>
