---
import Layout from "@/layouts/Layout.astro";
import Link from "@/components/Link.astro";
---

<Layout title="">
  <main class="container mx-auto p-4">
    <div
      class="mt-10 grid max-w-2xl grid-flow-row gap-10 lg:max-w-full lg:auto-cols-fr lg:grid-flow-col lg:gap-20"
    >
      <div class="max-w-lg space-y-6 lg:mt-20 lg:max-w-md">
        <div class="inline-block">
          <h1
            class="xs:text-[4.8rem] border-b-4 border-gray-900 font-title text-[3.3rem] font-blackish uppercase leading-none"
          >
            BRANCH
          </h1>
          <h2
            class="xs:text-[2.2rem] mt-2 font-title text-[1.5rem] font-semibold uppercase leading-none text-viking-600"
          >
            Software Studio
          </h2>
        </div>
        <p class="text-lg">
          Branch Software Studio creates simple, creative, and effective
          websites.
        </p>
        <Link href="#">VIEW SERVICES</Link>
      </div>
      <div class="max-w-lg lg:max-w-full">
        <img src="trees.jpeg" class="rounded-2xl border-8 border-gray-900" />
      </div>
    </div>
